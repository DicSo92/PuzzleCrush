<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="25sp"
    android:paddingVertical="25sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paused"
        android:textSize="35sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some text, with maybe game statistics."
        android:textSize="20sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginBottom="20sp"
        />
    <Button
        android:id="@+id/pause_continue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#1bd0d1"
        android:text="Continue !"
        android:layout_marginBottom="10sp" />

    <Button
        android:id="@+id/pause_backMenu"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#c91414"
        android:text="Back to Menu"/>

</LinearLayout>